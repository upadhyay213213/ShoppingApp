<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="@dimen/item_imageview_width"
        android:layout_height="@dimen/item_imageview_width"
        android:id="@+id/item_imageview"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_textview"
        android:layout_below="@+id/item_imageview"
        android:layout_margin="@dimen/maargin_medium"
        />
<Button
    android:id="@+id/remove_item_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Remove From Basket"
    android:layout_toRightOf="@+id/item_imageview"/>

</RelativeLayout>